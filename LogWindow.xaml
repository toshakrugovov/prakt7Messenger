<Window x:Class="PracticalWork6.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticalWork6"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="LogWindow" Height="350" Width="500" Background="LightGreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" FontWeight="Bold" FontSize="11">
            <StackPanel x:Name="StackPanel_LogMessages" />
        </ScrollViewer>
        <Button Grid.Row="1" Background="DarkGreen"  Content="Clear Log" Click="ClearLog_Click" Height="30" Width="100" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Algerian" />
    </Grid>
</Window>
